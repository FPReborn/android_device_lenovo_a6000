$(call inherit-product, $(SRC_TARGET_DIR)/product/languages_full.mk)

LOCAL_PATH := device/lenovo/a6000

DEVICE_PACKAGE_OVERLAYS += $(LOCAL_PATH)/overlay

# media_profiles and media_codecs xmls for 8916
PRODUCT_COPY_FILES += \
    device/lenovo/a6000/media/media_profiles.xml:system/etc/media_profiles.xml \
    device/lenovo/a6000/media/media_codecs.xml:system/etc/media_codecs.xml

# Audio configuration file
PRODUCT_COPY_FILES += \
    device/lenovo/a6000/etc/audio_policy.conf:system/etc/audio_policy.conf \
    device/lenovo/a6000/etc/mixer_paths_mtp.xml:system/etc/mixer_paths_mtp.xml \
    device/lenovo/a6000/etc/mixer_paths_qrd_skuh.xml:system/etc/mixer_paths_qrd_skuh.xml \
    device/lenovo/a6000/etc/mixer_paths_qrd_skui.xml:system/etc/mixer_paths_qrd_skui.xml \
    device/lenovo/a6000/etc/mixer_paths_qrd_skuhf.xml:system/etc/mixer_paths_qrd_skuhf.xml \
    device/lenovo/a6000/etc/mixer_paths.xml:system/etc/mixer_paths.xml

# DPM
PRODUCT_COPY_FILES += \
    $(LOCAL_PATH)/ramdisk/etc/dpm/fdMgr/fd.conf:system/etc/dpm/fdMgr/fd.conf

# gps/location secuity configuration file
PRODUCT_COPY_FILES += \
    device/lenovo/a6000/sec_config:system/etc/sec_config

# Listen configuration file
PRODUCT_COPY_FILES += \
    device/lenovo/a6000/listen_platform_info.xml:system/etc/listen_platform_info.xml

PRODUCT_COPY_FILES += \
    device/lenovo/a6000/etc/capability.xml:system/etc/capability.xml \
    device/lenovo/a6000/etc/qlog-conf.xml:system/etc/qlog-conf.xml \
    device/lenovo/a6000/etc/wfdconfig.xml:system/etc/wfdconfig.xml \
    device/lenovo/a6000/etc/wfdconfigsink.xml:system/etc/wfdconfigsink.xml

PRODUCT_COPY_FILES += \
    device/lenovo/a6000/etc/whitelist_appops.xml:system/etc/whitelist_appops.xml

PRODUCT_COPY_FILES += \
    device/lenovo/a6000/wifi/WCNSS_cfg.dat:system/etc/firmware/wlan/prima/WCNSS_cfg.dat \
    device/lenovo/a6000/wifi/wpa_supplicant.conf:system/etc/wifi/wpa_supplicant.conf \
    device/lenovo/a6000/wifi/p2p_supplicant_overlay.conf:system/etc/wifi/p2p_supplicant_overlay.conf \
    device/lenovo/a6000/wifi/WCNSS_qcom_cfg.ini:system/etc/wifi/WCNSS_qcom_cfg.ini \
    device/lenovo/a6000/wifi/wpa_supplicant_overlay.conf:system/etc/wifi/wpa_supplicant_overlay.conf


